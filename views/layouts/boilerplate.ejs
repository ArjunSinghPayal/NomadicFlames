    <link rel="manifest" href="/assets/icons/site.webmanifest" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Android Icons -->
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/assets/icons/android-chrome-192x192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/assets/icons/android-chrome-512x512.png"
    />

    <!-- SEO: Open Graph for Social Sharing -->
    <meta
      property="og:title"
      content="NomadicFlame – Escape to Nature’s Table"
    />

    <meta
      property="og:description"
      content="Discover campgrounds where mountains meet fine dining. Plan your next adventure with NomadicFlame."
    />
