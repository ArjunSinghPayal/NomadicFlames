<% layout('layouts/adminLayout') %> <% if(campgrounds.length === 0) {%>
<p class="text-light">No campgrounds found.</p>
<% } else { %>
<div class="card glass-card p-3">
  <div class="table-responsive">
    <table class="table table-dark table-hover table-bordered align-middle">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% campgrounds.forEach(camp => { %>
        <tr>
          <td>
            <a
              href="/campgrounds/<%= camp._id %>"
              class="text-decoration-none text-info fw-semibold"
            >
              <%= camp.title %>
            </a>
          </td>
          <td><%= camp.author?.username || 'Unknown' %></td>
          <td><%= camp.createdAt.toLocaleString("en-IN") %></td>
          <td>
            <form
              action="/admin/campgrounds/<%= camp._id %>?_method=DELETE"
              method="POST"
              class="d-inline confirm-delete-form"
              data-confirm="Are you sure you want to delete this campground?"
            >
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
<% } %>
