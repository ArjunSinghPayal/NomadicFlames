<% if (success && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show mt-3 d-flex align-items-center justify-content-between"
  role="alert"
>
  <div class="me-3 mb-0"><%= success %></div>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show mt-3 d-flex align-items-center justify-content-between"
  role="alert"
>
  <div class="me-3 mb-0"><%= error %></div>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
